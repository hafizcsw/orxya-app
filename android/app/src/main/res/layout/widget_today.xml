<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oryxa - نظرة سريعة"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <!-- Next Task Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/next_task_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المهمة التالية"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/next_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="جاري التحميل..."
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/next_task_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#00D9FF" />
    </LinearLayout>

    <!-- Grid for other glances -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="8dp">

        <!-- Prayer -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/prayer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الصلاة التالية"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/prayer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#00D9FF" />
        </LinearLayout>

        <!-- Steps -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الخطوات"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/steps_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Work Progress -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="العمل"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/work_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0س 0د"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Conflicts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="التعارضات"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/conflicts_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF6B6B" />
        </LinearLayout>
    </GridLayout>

</LinearLayout>
